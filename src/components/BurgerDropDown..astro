---
import "../css/style.css";
---

<div class="burger_nav">
  <div class="nav_bar">
    <a class="nav_link" href="https://www.ca.dk/">CA hjemmeside</a>
    <span class="color_line"></span>
    <a class="nav_link" href="https://www.ca.dk/studiepartner/">Studiepartner</a>
  </div>
</div>

<style>
  .burger_nav {
    display: none;
    top: 74px;
  }

  a {
    text-decoration: none;
  }
  a:active {
    text-decoration: underline;
  }

  .burger_nav.active {
    display: block;
    position: absolute;
    max-width: 100%;
    background-color: grey;
    height: auto;
    z-index: 4;

    .nav_bar {
      display: flex;
      flex-direction: column;
    }

    .nav_link {
      padding: 2rem;
    }

    .color_line {
      max-width: 100%;
      height: 2px;
      background: #054673;
    }
  }

  @media orientation:horizontal (max-width: 599px;) {
  }
</style>

<script src="../js/script.js"></script>
